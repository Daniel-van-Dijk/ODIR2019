#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gpus=1
#SBATCH --job-name=predsJob
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=3
#SBATCH --time=01:30:00
#SBATCH --mem=48000M
#SBATCH --output=slurm_output_%A.out

module purge
module load 2021
module load Anaconda3/2021.05

# Your job starts in the directory where you call sbatch
# cd $HOME/...
# Activate your environment
source activate foundational
# Run your code
srun python -m torch.distributed.launch --nproc_per_node=1 --master_port=48798 main_finetune.py \
    --batch_size 16 \
    --world_size 1 \
    --model vit_large_patch16 \
    --cls_token \
    --epochs 50 \
    --blr 5e-4 --layer_decay 0.4 \
    --weight_decay 0.1 --drop_path 0.2 \
    --nb_classes 8 \
    --output_dir ./run_${SLURM_JOB_ID}/ \
    --data_path /home/scur0556/ODIR2019/data \
    --task ./finetune_ODIR/ \
    --finetune ./RETFound_cfp_weights.pth
